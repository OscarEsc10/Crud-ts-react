{
  "compilerOptions": {
    "module": "ESNext",        // or "ES2020"
    "moduleResolution": "bundler",
    "target": "ES6",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": false
  }
}
